@page "/Account/AccessDenied"

<PageTitle>الوصول مرفوض - الماسة</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                    <h2 class="fw-bold mt-4 mb-3">الوصول مرفوض</h2>
                    <p class="text-muted mb-4">
                        ليس لديك صلاحية للوصول إلى هذه الصفحة.<br />
                        هذه الصفحة مخصصة للمديرين فقط.
                    </p>
                    
                    @if (!string.IsNullOrEmpty(ReturnUrl))
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            حاولت الوصول إلى: <strong>@ReturnUrl</strong>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> العودة للصفحة الرئيسية
                        </a>
                        <a href="/Account/Login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right"></i> تسجيل دخول بحساب آخر
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }
}
