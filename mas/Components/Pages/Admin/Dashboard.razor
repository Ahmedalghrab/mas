@page "/admin"
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer
@attribute [Authorize(Policy = "AdminOnly")]

<PageTitle>لوحة التحكم - الماسة</PageTitle>

<div class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold text-primary mb-0">
                <i class="bi bi-speedometer2"></i> لوحة التحكم
            </h1>
            <p class="text-muted">نظرة سريعة على أداء الموقع</p>
        </div>
        <div class="col-md-4 text-md-end text-start">
            <a class="btn btn-primary btn-lg" href="/admin/products/add">
                <i class="bi bi-plus-circle"></i> إضافة خدمة
            </a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        @foreach (var card in summaryCards)
        {
            <div class="col-6 col-lg-3">
                <div class="card shadow-sm border-0 h-100" style="border-radius: 16px;">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width:52px;height:52px; background: @card.BadgeBg; color:@card.BadgeColor;">
                            <i class="@card.Icon" style="font-size:1.4rem;"></i>
                        </div>
                        <div>
                            <div class="text-muted small">@card.Title</div>
                            <div class="fw-bold fs-4">@card.Value</div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Products Overview</h5>
                    <span class="badge bg-light text-primary">Updated</span>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4 border-end">
                            <div class="fw-bold fs-3 text-primary">@totalProducts</div>
                            <div class="text-muted">Total</div>
                        </div>
                        <div class="col-4 border-end">
                            <div class="fw-bold fs-3 text-success">@activeProducts</div>
                            <div class="text-muted">Active</div>
                        </div>
                        <div class="col-4">
                            <div class="fw-bold fs-3 text-warning">@featuredProducts</div>
                            <div class="text-muted">Featured</div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between text-muted small">
                        <span>Categories: @totalCategories</span>
                        <span>Testimonials: @activeTestimonials</span>
                        <span>Unread messages: @unreadMessages</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-bell"></i> Quick Links</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/products">
                        <span><i class="bi bi-box-seam text-primary"></i> الخدمات</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/categories">
                        <span><i class="bi bi-tags text-success"></i> التصنيفات</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/contact">
                        <span><i class="bi bi-envelope text-danger"></i> رسائل التواصل</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/pages">
                        <span><i class="bi bi-file-earmark-text text-info"></i> الصفحات</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/home-content">
                        <span><i class="bi bi-house-door text-warning"></i> محتوى الصفحة الرئيسية</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/marketing">
                        <span><i class="bi bi-megaphone text-purple"></i> التسويق</span> <i class="bi bi-arrow-left"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="/admin/settings">
                        <span><i class="bi bi-gear text-secondary"></i> الإعدادات</span> <i class="bi bi-arrow-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalProducts;
    private int activeProducts;
    private int featuredProducts;
    private int totalCategories;
    private int activeTestimonials;
    private int unreadMessages;

    private readonly List<SummaryCard> summaryCards = new();

    [Inject] private HttpClient Http { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        BuildCards();
    }

    private async Task LoadData()
    {
        try
        {
            var productsTask = Http.GetFromJsonAsync<List<ProductDto>>("/api/products?isActive=");
            var categoriesTask = Http.GetFromJsonAsync<List<CategoryDto>>("/api/categories?isActive=");
            var testimonialsTask = Http.GetFromJsonAsync<List<TestimonialDto>>("/api/testimonials?isActive=true");

            // Contact API requires admin; swallow unauthorized
            Task<List<ContactMessageDto>?> messagesTask;
            try
            {
                messagesTask = Http.GetFromJsonAsync<List<ContactMessageDto>>("/api/contact?isRead=false");
            }
            catch
            {
                messagesTask = Task.FromResult<List<ContactMessageDto>?>(new());
            }

            await Task.WhenAll(productsTask, categoriesTask, testimonialsTask, messagesTask);

            var products = await productsTask ?? new();
            totalProducts = products.Count;
            activeProducts = products.Count(p => p.IsActive);
            featuredProducts = products.Count(p => p.IsFeatured);

            var categories = await categoriesTask ?? new();
            totalCategories = categories.Count;

            var testimonials = await testimonialsTask ?? new();
            activeTestimonials = testimonials.Count;

            var messages = await messagesTask ?? new();
            unreadMessages = messages.Count(m => !m.IsRead);
        }
        catch
        {
            // keep defaults
        }
    }

    private void BuildCards()
    {
        summaryCards.Clear();
        summaryCards.Add(new SummaryCard("Products", totalProducts, "bi bi-box-seam", "rgba(104, 132, 245, 0.15)", "#6c8ff5"));
        summaryCards.Add(new SummaryCard("Active", activeProducts, "bi bi-check-circle", "rgba(72, 201, 176, 0.15)", "#28a745"));
        summaryCards.Add(new SummaryCard("Featured", featuredProducts, "bi bi-star-fill", "rgba(255, 193, 7, 0.15)", "#f0ad4e"));
        summaryCards.Add(new SummaryCard("Categories", totalCategories, "bi bi-grid", "rgba(111, 66, 193, 0.15)", "#6f42c1"));
        summaryCards.Add(new SummaryCard("Testimonials", activeTestimonials, "bi bi-chat-quote", "rgba(13, 202, 240, 0.15)", "#0dcaf0"));
        summaryCards.Add(new SummaryCard("Unread messages", unreadMessages, "bi bi-envelope", "rgba(220, 53, 69, 0.15)", "#dc3545"));
    }

    private record SummaryCard(string Title, int Value, string Icon, string BadgeBg, string BadgeColor);

    public class ProductDto
    {
        public int Id { get; set; }
        public bool IsActive { get; set; }
        public bool IsFeatured { get; set; }
    }

    public class CategoryDto
    {
        public int Id { get; set; }
    }

    public class TestimonialDto
    {
        public int Id { get; set; }
        public bool IsActive { get; set; }
    }

    public class ContactMessageDto
    {
        public int Id { get; set; }
        public bool IsRead { get; set; }
    }
}
