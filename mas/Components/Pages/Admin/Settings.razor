@page "/admin/settings"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using mas.Data
@using mas.Models
@using Microsoft.EntityFrameworkCore
@attribute [Authorize(Policy = "AdminOnly")]

<PageTitle>Site Settings - ALMASS Admin</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5">
                <i class="bi bi-gear"></i> Site Settings
            </h1>
            <p class="text-muted">Configure your website settings from here</p>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="@settings" OnValidSubmit="@HandleSubmit" FormName="settingsForm">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Site Name (Arabic)</label>
                                <InputText @bind-Value="settings.SiteName" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Site Name (English)</label>
                                <InputText @bind-Value="settings.SiteNameEn" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Primary Color</label>
                                <InputText @bind-Value="settings.PrimaryColor" type="color" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Secondary Color</label>
                                <InputText @bind-Value="settings.SecondaryColor" type="color" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-telephone"></i> Contact Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold">WhatsApp Number</label>
                                <InputText @bind-Value="settings.WhatsAppNumber" class="form-control" placeholder="+966xxxxxxxxx" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Phone Number</label>
                                <InputText @bind-Value="settings.PhoneNumber" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <InputText @bind-Value="settings.Email" type="email" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Address</label>
                                <InputText @bind-Value="settings.Address" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-file-text"></i> About Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">About (Arabic)</label>
                                    <InputTextArea @bind-Value="settings.AboutAr" class="form-control" rows="4" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">About (English)</label>
                                    <InputTextArea @bind-Value="settings.AboutEn" class="form-control" rows="4" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Vision (Arabic)</label>
                                    <InputTextArea @bind-Value="settings.VisionAr" class="form-control" rows="3" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Vision (English)</label>
                                    <InputTextArea @bind-Value="settings.VisionEn" class="form-control" rows="3" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Mission (Arabic)</label>
                                    <InputTextArea @bind-Value="settings.MissionAr" class="form-control" rows="3" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Mission (English)</label>
                                    <InputTextArea @bind-Value="settings.MissionEn" class="form-control" rows="3" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0"><i class="bi bi-share"></i> Social Media Links</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label fw-bold"><i class="bi bi-facebook"></i> Facebook</label>
                                <InputText @bind-Value="settings.FacebookUrl" class="form-control" placeholder="https://facebook.com/..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold"><i class="bi bi-twitter"></i> Twitter</label>
                                <InputText @bind-Value="settings.TwitterUrl" class="form-control" placeholder="https://twitter.com/..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold"><i class="bi bi-instagram"></i> Instagram</label>
                                <InputText @bind-Value="settings.InstagramUrl" class="form-control" placeholder="https://instagram.com/..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold"><i class="bi bi-linkedin"></i> LinkedIn</label>
                                <InputText @bind-Value="settings.LinkedInUrl" class="form-control" placeholder="https://linkedin.com/..." />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-toggles"></i> Features</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check form-switch mb-3">
                                <InputCheckbox @bind-Value="settings.EnableWhatsAppButton" class="form-check-input" id="enableWhatsApp" />
                                <label class="form-check-label fw-bold" for="enableWhatsApp">
                                    Enable WhatsApp Button
                                </label>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <InputCheckbox @bind-Value="settings.EnableDarkMode" class="form-check-input" id="enableDarkMode" />
                                <label class="form-check-label fw-bold" for="enableDarkMode">
                                    Enable Dark Mode
                                </label>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <InputCheckbox @bind-Value="settings.EnableTestimonials" class="form-check-input" id="enableTestimonials" />
                                <label class="form-check-label fw-bold" for="enableTestimonials">
                                    Show Testimonials
                                </label>
                            </div>
                            <div class="form-check form-switch mb-3">
                                <InputCheckbox @bind-Value="settings.MaintenanceMode" class="form-check-input" id="maintenanceMode" />
                                <label class="form-check-label fw-bold text-danger" for="maintenanceMode">
                                    Maintenance Mode (Hide Site)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show mt-4">
                    <i class="bi bi-check-circle"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mt-4">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }

            <div class="d-flex gap-2 justify-content-end mt-4">
                <button type="submit" class="btn btn-primary btn-lg" disabled="@saving">
                    @if (saving)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    <i class="bi bi-save"></i> Save Settings
                </button>
                <a href="/admin" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </EditForm>
    }
</div>

@code {
    [Inject] private IDbContextFactory<ApplicationDbContext> DbFactory { get; set; } = default!;

    private SiteSettings settings = new();
    private bool loading = true;
    private bool saving = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        loading = true;
        try
        {
            using var context = await DbFactory.CreateDbContextAsync();
            var result = await context.SiteSettings.FirstOrDefaultAsync();
            if (result != null)
            {
                settings = result;
            }
            else
            {
                settings = new SiteSettings
                {
                    SiteName = "ALMASS",
                    SiteNameEn = "ALMASS",
                    PrimaryColor = "#0d6efd",
                    SecondaryColor = "#6c757d",
                    EnableWhatsAppButton = true,
                    EnableDarkMode = true,
                    EnableTestimonials = true
                };
            }
        }
        catch
        {
            settings = new SiteSettings();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task HandleSubmit()
    {
        saving = true;
        successMessage = null;
        errorMessage = null;

        try
        {
            using var context = await DbFactory.CreateDbContextAsync();
            var existing = await context.SiteSettings.FirstOrDefaultAsync();
            
            if (existing == null)
            {
                settings.Id = 1;
                settings.CreatedAt = DateTime.UtcNow;
                settings.UpdatedAt = DateTime.UtcNow;
                context.SiteSettings.Add(settings);
            }
            else
            {
                existing.SiteName = settings.SiteName;
                existing.SiteNameEn = settings.SiteNameEn;
                existing.LogoPath = settings.LogoPath;
                existing.FaviconPath = settings.FaviconPath;
                existing.WhatsAppNumber = settings.WhatsAppNumber;
                existing.PhoneNumber = settings.PhoneNumber;
                existing.Email = settings.Email;
                existing.Address = settings.Address;
                existing.FacebookUrl = settings.FacebookUrl;
                existing.TwitterUrl = settings.TwitterUrl;
                existing.InstagramUrl = settings.InstagramUrl;
                existing.LinkedInUrl = settings.LinkedInUrl;
                existing.AboutAr = settings.AboutAr;
                existing.AboutEn = settings.AboutEn;
                existing.VisionAr = settings.VisionAr;
                existing.VisionEn = settings.VisionEn;
                existing.MissionAr = settings.MissionAr;
                existing.MissionEn = settings.MissionEn;
                existing.MetaDescriptionAr = settings.MetaDescriptionAr;
                existing.MetaDescriptionEn = settings.MetaDescriptionEn;
                existing.MetaKeywords = settings.MetaKeywords;
                existing.EnableWhatsAppButton = settings.EnableWhatsAppButton;
                existing.EnableDarkMode = settings.EnableDarkMode;
                existing.EnableTestimonials = settings.EnableTestimonials;
                existing.MaintenanceMode = settings.MaintenanceMode;
                existing.PrimaryColor = settings.PrimaryColor;
                existing.SecondaryColor = settings.SecondaryColor;
                existing.UpdatedAt = DateTime.UtcNow;
            }

            await context.SaveChangesAsync();
            successMessage = "تم حفظ الإعدادات بنجاح!";
            await Task.Delay(2000);
            successMessage = null;
        }
        catch (Exception ex)
        {
            errorMessage = $"خطأ في الحفظ: {ex.Message}";
        }
        finally
        {
            saving = false;
        }
    }
}
}
