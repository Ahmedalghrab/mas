</div>

@code {
    [Inject] private HttpClient Http { get; set; } = default!;

    private HomeContent? content;
    private bool loading = true;
    private bool saving = false;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadContent();
    }

    private async Task LoadContent()
    {
        loading = true;
        try
        {
            content = await Http.GetFromJsonAsync<HomeContent>("/api/HomeContent");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading content: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task SaveContent()
    {
        if (content == null) return;

        saving = true;
        successMessage = null;
        try
        {
            var response = await Http.PutAsJsonAsync("/api/HomeContent", content);
            if (response.IsSuccessStatusCode)
            {
                successMessage = "تم حفظ التغييرات بنجاح!";
                await Task.Delay(3000);
                successMessage = null;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving content: {ex.Message}");
        }
        finally
        {
            saving = false;
        }
    }
}
