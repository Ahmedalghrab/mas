@page "/admin/testimonials"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@attribute [Authorize(Policy = "AdminOnly")]

<PageTitle>إدارة التقييمات - لوحة التحكم</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">
                    <i class="bi bi-star-fill"></i> إدارة التقييمات
                </h1>
                <button class="btn btn-primary btn-lg" @onclick="AddNewTestimonial">
                    <i class="bi bi-plus-circle"></i> إضافة تقييم جديد
                </button>
            </div>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">جاري التحميل...</span>
            </div>
        </div>
    }
    else if (testimonials == null || !testimonials.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-3"></i>
            <p class="mt-2 mb-0">لا توجد تقييمات.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var testimonial in testimonials)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(testimonial.CustomerImage))
                                {
                                    <img src="@testimonial.CustomerImage" alt="@testimonial.CustomerName" 
                                        class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-3" 
                                        style="width: 60px; height: 60px;">
                                        <i class="bi bi-person fs-3 text-primary"></i>
                                    </div>
                                }
                                <div>
                                    <h6 class="mb-0">@testimonial.CustomerName</h6>
                                    <div>
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < testimonial.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                            <p class="mb-3">@testimonial.ContentAr</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (testimonial.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشط</span>
                                    }
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-warning" @onclick="() => EditTestimonial(testimonial)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteTestimonial(testimonial.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal for Add/Edit -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-@(isEditMode ? "pencil" : "plus-circle")"></i>
                        @(isEditMode ? "تعديل تقييم" : "إضافة تقييم جديد")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">اسم العميل</label>
                        <input type="text" class="form-control" @bind="currentTestimonial.CustomerName" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">صورة العميل (URL)</label>
                        <input type="text" class="form-control" @bind="currentTestimonial.CustomerImage" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">التقييم (بالعربية)</label>
                        <textarea class="form-control" rows="4" @bind="currentTestimonial.ContentAr"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">التقييم (بالإنجليزية)</label>
                        <textarea class="form-control" rows="4" @bind="currentTestimonial.ContentEn"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">التقييم (من 1 إلى 5)</label>
                        <select class="form-select" @bind="currentTestimonial.Rating">
                            <option value="1">⭐ 1 نجمة</option>
                            <option value="2">⭐⭐ 2 نجمة</option>
                            <option value="3">⭐⭐⭐ 3 نجوم</option>
                            <option value="4">⭐⭐⭐⭐ 4 نجوم</option>
                            <option value="5">⭐⭐⭐⭐⭐ 5 نجوم</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">ترتيب العرض</label>
                        <input type="number" class="form-control" @bind="currentTestimonial.DisplayOrder" />
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="currentTestimonial.IsActive" id="isActive">
                        <label class="form-check-label" for="isActive">
                            نشط
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">إلغاء</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveTestimonial">
                        <i class="bi bi-save"></i> حفظ
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TestimonialDto> testimonials = new();
    private bool loading = true;
    private bool showModal = false;
    private bool isEditMode = false;
    private TestimonialDto currentTestimonial = new();

    [Inject] private HttpClient Http { get; set; } = default!;
    [Inject] private ILogger<Testimonials> Logger { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadTestimonials();
    }

    private async Task LoadTestimonials()
    {
        loading = true;
        try
        {
            var response = await Http.GetAsync("/api/testimonials?isActive=");
            if (response.IsSuccessStatusCode)
            {
                testimonials = await response.Content.ReadFromJsonAsync<List<TestimonialDto>>() ?? new();
            }
            else
            {
                testimonials = new();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading testimonials");
            testimonials = new();
        }
        finally
        {
            loading = false;
        }
    }

    private void AddNewTestimonial()
    {
        currentTestimonial = new TestimonialDto
        {
            Rating = 5,
            DisplayOrder = testimonials.Count + 1,
            IsActive = true
        };
        isEditMode = false;
        showModal = true;
    }

    private void EditTestimonial(TestimonialDto testimonial)
    {
        currentTestimonial = new TestimonialDto
        {
            Id = testimonial.Id,
            CustomerName = testimonial.CustomerName,
            CustomerImage = testimonial.CustomerImage,
            ContentAr = testimonial.ContentAr,
            ContentEn = testimonial.ContentEn,
            Rating = testimonial.Rating,
            DisplayOrder = testimonial.DisplayOrder,
            IsActive = testimonial.IsActive
        };
        isEditMode = true;
        showModal = true;
    }

    private async Task SaveTestimonial()
    {
        try
        {
            HttpResponseMessage response;
            
            if (isEditMode)
            {
                response = await Http.PutAsJsonAsync($"/api/testimonials/{currentTestimonial.Id}", currentTestimonial);
            }
            else
            {
                response = await Http.PostAsJsonAsync("/api/testimonials", currentTestimonial);
            }

            if (response.IsSuccessStatusCode)
            {
                await LoadTestimonials();
                CloseModal();
            }
            else
            {
                Logger.LogError("Error saving testimonial: {StatusCode}", response.StatusCode);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving testimonial");
        }
    }

    private async Task DeleteTestimonial(int id)
    {
        if (!await ConfirmDelete())
            return;

        try
        {
            var response = await Http.DeleteAsync($"/api/testimonials/{id}");
            
            if (response.IsSuccessStatusCode)
            {
                await LoadTestimonials();
            }
            else
            {
                Logger.LogError("Error deleting testimonial: {StatusCode}", response.StatusCode);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting testimonial");
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // In a real app, you'd use a proper confirmation dialog
        return true;
    }

    private void CloseModal()
    {
        showModal = false;
        currentTestimonial = new();
    }

    public class TestimonialDto
    {
        public int Id { get; set; }
        public string CustomerName { get; set; } = "";
        public string? CustomerImage { get; set; }
        public string ContentAr { get; set; } = "";
        public string ContentEn { get; set; } = "";
        public int Rating { get; set; }
        public int DisplayOrder { get; set; }
        public bool IsActive { get; set; }
    }
}
