{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/home/site/wwwroot/mas.db"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YOUR_PRODUCTION_SECRET_KEY_CHANGE_THIS_IN_AZURE_PORTAL",
    "Issuer": "https://mas-almass-app.azurewebsites.net",
    "Audience": "https://mas-almass-app.azurewebsites.net",
    "ExpirationInMinutes": 60
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "Caching": {
    "UseRedis": false,
    "RedisConnection": "",
    "DefaultExpirationMinutes": 30
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUser": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "AdminEmail": "admin@mas.com"
  }
}
